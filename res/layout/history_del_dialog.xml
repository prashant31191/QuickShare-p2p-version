<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center" >

    <TextView
        android:id="@+id/del_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/prompt_delete_button"
        android:gravity="center"
        android:text="@string/history_del_record"
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/del_record_file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/del_record"
        android:layout_marginTop="15dip"
        android:background="@drawable/prompt_delete_button"
        android:gravity="center"
        android:text="@string/history_del_record_file"
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/del_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:visibility="gone"
        android:orientation="horizontal" >

        <ProgressBar
            android:id="@+id/del_progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:text="正在删除历史"
            android:textColor="#ffffff" />
    </LinearLayout>

</RelativeLayout>