<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:background="@color/pi_bg"
                android:duplicateParentState="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <com.cloudsynch.quickshare.widgets.Titlebar
            android:id="@+id/title_bar"
            android:background="@drawable/setting_title_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <FrameLayout
            android:id="@+id/resource_detail"
            android:layout_below="@id/title_bar"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_above="@+id/operation_layout"
            />
    <LinearLayout
            android:id="@+id/operation_layout"
            android:layout_alignParentBottom="true"
            android:layout_width="fill_parent"
            android:background="@drawable/home_down_bg"
            android:paddingTop="10dp"
            android:visibility="gone"
            android:layout_height="wrap_content">
        <RelativeLayout
                android:id="@+id/send"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="0dp">
            <ImageView
                    android:id="@+id/image"
                    android:src="@drawable/press_send_icon"
                    android:layout_centerHorizontal="true"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>
            <TextView
                    android:layout_below="@+id/image"
                    android:text="@string/resource_manager_send"
                    android:textColor="@color/black"
                    android:layout_centerHorizontal="true"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>
            <ImageView
                    android:src="@drawable/home_separate_line"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout
                android:id="@+id/copy"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="0dp">
            <ImageView
                    android:id="@+id/image"
                    android:src="@drawable/press_copy_icon"
                    android:layout_centerHorizontal="true"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>
            <TextView
                    android:layout_below="@+id/image"
                    android:text="@string/resource_manager_copy"
                    android:textColor="@color/black"
                    android:layout_centerHorizontal="true"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>
            <ImageView
                    android:src="@drawable/home_separate_line"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout
                android:id="@+id/cut"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="0dp">
            <ImageView
                    android:id="@+id/image"
                    android:src="@drawable/press_shift_icon"
                    android:layout_centerHorizontal="true"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>
            <TextView
                    android:layout_below="@+id/image"
                    android:text="@string/resource_manager_cut"
                    android:textColor="@color/black"
                    android:layout_centerHorizontal="true"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>
            <ImageView
                    android:src="@drawable/home_separate_line"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout
                android:id="@+id/rename"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="0dp">
            <ImageView
                    android:id="@+id/image"
                    android:src="@drawable/press_rename_icon"
                    android:layout_centerHorizontal="true"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>
            <TextView
                    android:layout_below="@+id/image"
                    android:text="@string/resource_manager_rename"
                    android:textColor="@color/black"
                    android:layout_centerHorizontal="true"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>
            <ImageView
                    android:layout_marginTop="5dp"
                    android:src="@drawable/home_separate_line"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout
                android:id="@+id/delete"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="0dp">
            <ImageView
                    android:id="@+id/image"
                    android:src="@drawable/press_delete_icon"
                    android:layout_centerHorizontal="true"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>
            <TextView
                    android:layout_below="@+id/image"
                    android:text="@string/resource_manager_delete"
                    android:textColor="@color/black"
                    android:layout_centerHorizontal="true"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>