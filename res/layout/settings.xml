<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:duplicateParentState="true"
                android:background="#ECEEF0"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <com.cloudsynch.quickshare.widgets.Titlebar
            android:id="@+id/title_bar"
            android:background="@drawable/setting_title_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <ScrollView
            android:duplicateParentState="true"
            android:layout_below="@id/title_bar"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <LinearLayout
                android:duplicateParentState="true"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

            <RelativeLayout
                    android:id="@+id/voice"
                    android:layout_width="fill_parent"
                    android:layout_height="62dip"
                    android:background="@drawable/set_bg">

                <LinearLayout
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/settings_voice"
                            android:textColor="@color/setting_text_color"
                            android:textSize="18sp"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:text="@string/settings_voice_summary"
                            android:textColor="@color/setting_summary_color"
                            android:textSize="16sp"/>

                </LinearLayout>


                <ImageView
                        android:id="@+id/voice_switch"
                        android:src="@drawable/set_open_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dip"/>

            </RelativeLayout>

            <ImageView
                    android:src="@drawable/setting_list_line"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    />

            <RelativeLayout
                    android:id="@+id/vibration"
                    android:layout_width="fill_parent"
                    android:layout_height="62dip"
                    android:visibility="gone"
                    android:background="@drawable/set_bg">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dip"
                        android:text="@string/settings_vibration"
                        android:textColor="@color/setting_text_color"
                        android:textSize="18sp"/>

                <ImageView
                        android:src="@drawable/set_open_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="6dip"/>

            </RelativeLayout>

            <ImageView
                    android:src="@drawable/setting_list_line"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    />

            <RelativeLayout
                    android:id="@+id/auto_disconnect"
                    android:layout_width="fill_parent"
                    android:layout_height="62dip"
                    android:background="@drawable/set_bg">

                <LinearLayout
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dip"
                        android:layout_alignParentLeft="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/auto_switch"
                        android:orientation="vertical">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/settings_auto_disconnect"
                            android:textColor="@color/setting_text_color"
                            android:textSize="18sp"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="1dp"
                            android:text="@string/settings_auto_disconnect_summary"
                            android:textColor="@color/setting_summary_color"
                            android:textSize="14sp"/>

                </LinearLayout>

                <ImageView
                        android:id="@+id/auto_switch"
                        android:src="@drawable/set_cloesd_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dip"/>

            </RelativeLayout>

            <ImageView
                    android:src="@drawable/setting_list_line"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    />

            <RelativeLayout
                    android:id="@+id/auto_update"
                    android:layout_width="fill_parent"
                    android:layout_height="62dip"
                    android:background="@drawable/set_bg">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dip"
                        android:text="@string/settings_auto_update"
                        android:textColor="@color/setting_text_color"
                        android:textSize="18sp"/>

                <ImageView
                        android:id="@+id/check_version_switch"
                        android:src="@drawable/set_open_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dip"/>

            </RelativeLayout>

            <ImageView
                    android:src="@drawable/setting_line"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    />

            <RelativeLayout
                    android:id="@+id/white_list"
                    android:layout_width="fill_parent"
                    android:layout_height="62dip"
                    android:background="@drawable/setting_item_selector">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dip"
                        android:text="@string/settings_white_list"
                        android:textColor="@color/setting_text_color"
                        android:textSize="18sp"/>

                <ImageView
                        android:id="@+id/test"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dip"
                        android:src="@drawable/setting_arrow"/>

            </RelativeLayout>

            <ImageView
                    android:src="@drawable/setting_list_line"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    />
            <RelativeLayout
                    android:id="@+id/check_version"
                    android:layout_width="fill_parent"
                    android:layout_height="62dip"
                    android:background="@drawable/setting_item_selector">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dip"
                        android:text="@string/settings_check_version"
                        android:textColor="@color/setting_text_color"
                        android:textSize="18sp"/>

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dip"
                        android:src="@drawable/setting_arrow"/>
            </RelativeLayout>
            <ImageView
                    android:src="@drawable/setting_list_line"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    />
            <RelativeLayout
                    android:id="@+id/feedback"
                    android:layout_width="fill_parent"
                    android:layout_height="62dip"
                    android:background="@drawable/setting_item_selector">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dip"
                        android:text="@string/settings_feedback"
                        android:textColor="@color/setting_text_color"
                        android:textSize="18sp"/>

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dip"
                        android:src="@drawable/setting_arrow"/>
            </RelativeLayout>
            <ImageView
                    android:src="@drawable/setting_list_line"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    />
            <RelativeLayout
                    android:id="@+id/score"
                    android:layout_width="fill_parent"
                    android:layout_height="62dip"
                    android:background="@drawable/setting_item_selector">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dip"
                        android:text="@string/settings_score"
                        android:textColor="@color/setting_text_color"
                        android:textSize="18sp"/>

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dip"
                        android:src="@drawable/setting_arrow"/>
            </RelativeLayout>
            <ImageView
                    android:src="@drawable/setting_list_line"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    />
            <RelativeLayout
                    android:id="@+id/faq"
                    android:layout_width="fill_parent"
                    android:layout_height="62dip"
                    android:background="@drawable/setting_item_selector">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dip"
                        android:text="@string/settings_faq"
                        android:textColor="@color/setting_text_color"
                        android:textSize="18sp"/>

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dip"
                        android:src="@drawable/setting_arrow"/>
            </RelativeLayout>
            <RelativeLayout
                    android:id="@+id/about"
                    android:layout_width="fill_parent"
                    android:layout_height="62dip"
                    android:background="@drawable/setting_item_selector">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dip"
                        android:text="@string/settings_about"
                        android:textColor="@color/setting_text_color"
                        android:textSize="18sp"/>

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dip"
                        android:src="@drawable/setting_arrow"/>
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>