<resources>

    <style name="AppBaseTheme" parent="android:Theme.Light"></style>

    <style name="AppBaseTheme" parent="android:Theme.Light"></style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme"></style>

    <style name="pi_user_text_style" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/pi_title_txt_size</item>
        <item name="android:textColor">#1E1E1E</item>
    </style>

    <style name="home_user_title_text_style" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/home_title_text_zise</item>
        <item name="android:textColor">#4f544e</item>
    </style>

    <style name="PromptCheckbox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/prompt_checkbox</item>
    </style>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

</resources>